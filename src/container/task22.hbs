{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<main>
  <div>
    <div>
      <h1 class='text-center'>
        {{page_header.title}}
      </h1>
      <p class='text-center text-uppercase'>
        {{page_header.description}}
      </p>
    </div>
    <div class='card'>
      <div class='card-body'>
        <div
          class='display-6 text-end mb-3'
        >{{section.about_us.title_list.main}}</div>
        <div class='mb-3'>
          <h2
            class='text-end'
          >{{section.about_us.title_list.sub}}</h2>
        </div>
        <div>
          <button class='btn btn-outline-info'>
            {{section.about_us.button.text}}
          </button>
        </div>
      </div>
    </div>
  </div>
  <hr class='my-5' />
  <div class='card text-muted'>
    <div class='card-body'>
      <div
        class='display-5 mb-3'
      >{{section.advantage.title}}</div>
      <div class='card mb-4'>
        <div class='card-body'>
          <div class='display-4 mb-3'>
            {{section.advantage.efficiency.title}}
          </div>
          <h6
            class='mb-3'
          >{{section.advantage.efficiency.sub_title}}</h6>
          <p
            class='mb-4'
          >{{section.advantage.efficiency.description}}</p>
          <button
            class='btn btn-outline-warning'
          >{{section.advantage.efficiency.button}}</button>
        </div>
      </div>
      <div class='card mb-4'>
        <div class='card-body'>
          <div class='display-4 text-center mb-3'>
            {{section.advantage.innovation.title}}
          </div>
          <h6
            class='text-center mb-4'
          >{{section.advantage.innovation.sub_title}}</h6>
          <p
            class='tgtiext-center mb-4'
          >{{section.advantage.innovation.description}}</p>
          <button
            class='btn btn-outline-warning'
          >{{section.advantage.innovation.button}}</button>
        </div>
      </div>
      <div class='card'>
        <div class='card-body'>
          <div class='display-4 text-end mb-3'>
            {{section.advantage.collaboration.title}}
          </div>
          <h6
            class='text-end mb-3'
          >{{section.advantage.collaboration.sub_title}}</h6>
          <p
            class='text-end mb-4'
          >{{section.advantage.collaboration.description}}</p>
          <button
            class='btn btn-outline-warning'
          >{{section.advantage.collaboration.button}}</button>
        </div>
      </div>
    </div>
  </div>
  <hr class='my-5' />
  <div class='card'>
    <div class='card-body'>
      <div
        class='display-5 mb-3'
      >{{section.agreement.title}}</div>
      <div class='card'>
        <div class='card-body'>
          <h5
            class='mb-3'
          >{{section.agreement.info.detail.text}}</h5>
          <div class='card'>
            <div class='card-body'>
              <p>
                {{section.agreement.info.sub_title}}
              </p>
              <button
                class='btn btn-success'
              >{{section.agreement.info.detail.button}}</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

