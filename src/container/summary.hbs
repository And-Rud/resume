{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
  <main>
    {{#with main}}
      <section>
        <div>
          {{> title data=summary.title big= true}}
        </div>
        <div>
          <p>
            {{summary.text}}
          </p>
        </div>
      </section>
      <section>
        <div>
          {{> title data=experience.title big= false}}
        </div>
        <div>
          <p>
            {{experience.text}}
          </p>
        </div>
      </section>
    {{/with}}
  </main>

</div>

