{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<main>

  <div class="my-5">
    <h2>
      {{header}}
    </h2>
  </div>

  <div class="col-12">
    <div class="row g-2">
      <div class="col-8">
        <div class="my-4">
          <h4>
            {{contacts_data.title}}
          </h4>
          <button class="btn {{#if contacts_data.buttons.[0].isPrimary}}btn-primary{{/if}}">
            {{contacts_data.buttons.[0].text}}
          </button>
          <button class="btn {{#if contacts_data.buttons.[1].isOutline}}btn-outline-primary{{/if}}">
            {{contacts_data.buttons.[1].text}}
          </button>
        </div>
        <div class="row g-2">
          <div class="col-6">
            <div class="form-label">
              {{contacts_data.form.input.surname.lable}}
            </div>
            <input class="form-control" placeholder="{{contacts_data.form.input.surname.placeholder}}">
            <div class="form-text">
              {{contacts_data.form.input.surname.caption}}
            </div>
          </div>
          <div class="col-6">
            <div class="form-label">
              {{contacts_data.form.input.name.lable}}
            </div>
            <input class="form-control" placeholder="{{contacts_data.form.input.name.placeholder}}">
            <div class="form-text">
              {{contacts_data.form.input.name.caption}}
            </div>
          </div>
          <div class="col-6">
            <div class="form-label">
              {{contacts_data.form.input.phone.lable}}
            </div>
            <input class="form-control" placeholder="{{contacts_data.form.input.phone.placeholder}}">
            <div class="form-text">
              {{contacts_data.form.input.phone.caption}}
            </div>
          </div>
          <div class="col-6">
            <div class="form-label">
              {{contacts_data.form.input.email.lable}}
            </div>
            <input class="form-control" placeholder="{{contacts_data.form.input.email.placeholder}}">
            <div class="form-text">
              {{contacts_data.form.input.email.caption}}
            </div>
          </div>
          <hr class="my-5">
          <div class="form-check form-switch">
            <label class="form-check-label">{{contacts_data.form.switch.0.text}}</label>
            <input type="checkbox" class="form-check-input" {{#unless
              contacts_data.form.switch.0.isActive}}disabled{{/unless}}>
          </div>
          <div class="form-check form-switch">
            <label class="form-check-label">{{contacts_data.form.switch.1.text}}</label>
            <input type="checkbox" class="form-check-input" {{#unless
              contacts_data.form.switch.1.isActive}}disabled{{/unless}}>
          </div>
        </div>
        <hr class="my-4">
        <div>
          <h4 class="mb-3">{{delivery.title}}</h4>
          <div class="card mb-4">
            <div class="card-body">
              <div class="row">
                <div class="col-6">
                  <label class="form-label">{{delivery.select.0.label}}</label>
                  <select class="form-select">
                    <option selected>{{delivery.select.0.placeholder}}</option>
                    <option value="{{delivery.select.0.options.0.value}}">{{delivery.select.0.options.0.text}}
                    </option>
                    <option value="{{delivery.select.0.options.1.value}}">{{delivery.select.0.options.1.text}}
                    </option>
                    <option value="{{delivery.select.0.options.2.value}}">{{delivery.select.0.options.2.text}}
                    </option>
                    <option value="{{delivery.select.0.options.3.value}}">{{delivery.select.0.options.3.text}}
                    </option>
                    <option value="{{delivery.select.0.options.4.value}}">{{delivery.select.0.options.4.text}}
                    </option>
                    <option value="{{delivery.select.0.options.5.value}}">{{delivery.select.0.options.5.text}}
                    </option>
                  </select>
                </div>
                <div class="col-6">
                  <label class="form-label">{{delivery.select.1.label}}</label>
                  <select class="form-select">
                    <option selected>{{delivery.select.1.placeholder}}</option>
                    <option value="{{delivery.select.1.options.0.value}}">{{delivery.select.1.options.0.text}}
                    </option>
                    <option value="{{delivery.select.1.options.1.value}}">{{delivery.select.1.options.1.text}}
                    </option>
                    <option value="{{delivery.select.1.options.2.value}}">{{delivery.select.1.options.2.text}}
                    </option>
                    <option value="{{delivery.select.1.options.3.value}}">{{delivery.select.1.options.3.text}}
                    </option>
                    <option value="{{delivery.select.1.options.4.value}}">{{delivery.select.1.options.4.text}}
                    </option>
                    <option value="{{delivery.select.1.options.5.value}}">{{delivery.select.1.options.5.text}}
                    </option>
                  </select>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-7">
              <div class="form-check">
                <label class="form-check-label">{{delivery.delivery_type.0.type}}</label>
                <input name="delivery_type" type="radio" class="form-check-input">
              </div>
              <div class="form-check">
                <label class="form-check-label">{{delivery.delivery_type.1.type}}</label>
                <input name="delivery_type" type="radio" class="form-check-input">
              </div>
              <div class="form-check">
                <label class="form-check-label">{{delivery.delivery_type.2.type}}</label>
                <input name="delivery_type" type="radio" class="form-check-input">
              </div>
              <div class="form-check">
                <label class="form-check-label">{{delivery.delivery_type.3.type}}</label>
                <input name="delivery_type" type="radio" class="form-check-input">
              </div>
            </div>
            <div class="col-5">
              <div class="text-end">
                {{delivery.delivery_type.0.value}}
              </div>
              <div class="text-end">
                {{delivery.delivery_type.1.value}}
              </div>
              <div class="text-end">
                {{delivery.delivery_type.2.value}}
              </div>
              <div class="text-end">
                {{delivery.delivery_type.3.value}}
              </div>
            </div>
          </div>
        </div>
        <hr class="my-4">
        <div>
          <div class="h4 mb-3">
            Оплата
          </div>
          <div class="form-check">
            <label class="form-check-label">{{delivery.payment.0.type}}</label>
            <input name="p" type="radio" class="form-check-input">
            <div class="form-text">{{delivery.payment.0.description}} </div>

          </div>
          <div class="form-check">
            <label class="form-check-label">{{delivery.payment.0.type}}</label>
            <input name="p" type="radio" class="form-check-input">
          </div>
        </div>
        <hr class="my-4">
        <div class="my-4">
          <h4>Контактні данні отримувача</h4>
        </div>
        <div class="row g-2">
          <div class="col-6">
            <div class="form-label">
              {{delivery.contact.surname.lable}}
            </div>
            <input class="form-control" placeholder="{{delivery.contact.surname.placeholder}}">
            <div class="form-text">
              {{delivery.contact.surname.caption}}
            </div>
          </div>
          <div class="col-6">
            <div class="form-label">
              {{delivery.contact.name.lable}}
            </div>
            <input class="form-control" placeholder="{{delivery.contact.name.placeholder}}">
            <div class="form-text">
              {{delivery.contact.name.caption}}
            </div>
          </div>
          <div class="col-6">
            <div class="form-label">
              {{delivery.contact.phone.lable}}
            </div>
            <input class="form-control" placeholder="{{delivery.contact.phone.placeholder}}">
            <div class="form-text">
              {{delivery.contact.phone.caption}}
            </div>
          </div>
          <div class="col-6">
            <div class="form-label">
              {{delivery.contact.email.lable}}
            </div>
            <input class="form-control" placeholder="{{delivery.contact.email.placeholder}}">
            <div class="form-text">
              {{delivery.contact.email.caption}}
            </div>
          </div>
        </div>
        <hr class="my-5">
        <div>
          <div class="form-label">{{delivery.coment.lable}}</div>
          <input class="form-control" placeholder="{{delivery.coment.placeholder}}">
        </div>
        <hr class="mb-5 mt-4">
        <h4 class="mb-3">Купони</h4>
        <div class="mb-4">
          <label class="form-label">{{coupon.select.available_coupon.lable}}</label>
          <select class="form-select form-select-lg">
            <option selected>{{coupon.select.available_coupon.placeholder}}</option>
            <option value="{{coupon.select.available_coupon.options.0.value}}">
              {{coupon.select.available_coupon.options.0.text}}
            </option>
            <option value="{{coupon.select.available_coupon.options.1.value}}">
              {{coupon.select.available_coupon.options.1.text}}
            </option>
            <option value="{{coupon.select.available_coupon.options.2.value}}">
              {{coupon.select.available_coupon.options.2.text}}
            </option>
          </select>
        </div>
        <div class="mb-4">
          <label class="form-label">{{coupon.select.friend_coupon.lable}}</label>
          <select class="form-select form-select-sm">
            <option selected>{{coupon.select.friend_coupon.placeholder}}</option>
            <option value="{{coupon.select.friend_coupon.options.0.value}}">
              {{coupon.select.friend_coupon.options.0.text}}
            </option>
            <option value="{{coupon.select.friend_coupon.options.1.value}}">
              {{coupon.select.friend_coupon.options.1.text}}
            </option>
            <option value="{{coupon.select.friend_coupon.options.2.value}}">
              {{coupon.select.friend_coupon.options.2.text}}
            </option>
          </select>
          <div class="form-text"></div>
        </div>
        <div class="mb-3">
          <label class="form-label">{{coupon.add.friend.lable}}</label>
          <input class="form-control form-select-lg" placeholder="{{coupon.add.friend.placeholder}}">
          <div class="form-text">{{coupon.add.friend.caption}}</div>
        </div>
        <div>
          <label class="form-label">{{coupon.add.colleague.lable}}</label>
          <input class="form-control form-select-sm" placeholder="{{coupon.add.colleague.placeholder}}">
          <div class="form-text">{{coupon.add.colleague.caption}}</div>
        </div>
        <hr class="my-4">
        <div class="mb-4">
          <h4 class="mb-3">{{quiz.title}}</h4>
          <p>{{quiz.preference.title}}</p>
          <div class="form-check">
            <label class="form-check-label">{{quiz.preference.options.[0]}}</label>
            <input name="quiz" type="radio" class="form-check-input">
          </div>
          <div class="form-check">
            <label class="form-check-label">{{quiz.preference.options.[1]}}</label>
            <input name="quiz" type="radio" class="form-check-input">
          </div>
          <div class="form-check">
            <label class="form-check-label">{{quiz.preference.options.[2]}}</label>
            <input name="quiz" type="radio" class="form-check-input">
          </div>
          <div class="form-check">
            <label class="form-check-label">{{quiz.preference.options.[3]}}</label>
            <input name="quiz" type="radio" class="form-check-input">
          </div>
          <div class="form-check">
            <label class="form-check-label">{{quiz.preference.options.[4]}}</label>
            <input name="quiz" type="radio" class="form-check-input">
          </div>
        </div>
        <div class="mb-4">
          <div class="form-label">{{quiz.your_expirience.label}}</div>
          <input class="form-control">
        </div>
        <div class="mb-4">
          <label class="form-label">{{quiz.purchase_frequency.label}}</label>
          <select class="form-select form-select-sm">
            <option selected>{{quiz.purchase_frequency.placeholder}}</option>
            <option value="{{quiz.purchase_frequency.options.0.value}}">
              {{quiz.purchase_frequency.options.0.text}}
            </option>
            <option value="{{quiz.purchase_frequency.options.1.value}}">
              {{quiz.purchase_frequency.options.1.text}}
            </option>
            <option value="{{quiz.purchase_frequency.options.2.value}}">
              {{quiz.purchase_frequency.options.2.text}}
            </option>
          </select>
          <div class="form-text"></div>
        </div>
        <div class="mb-4">
          <p class="mb-3">{{quiz.factors.title}}</p>
          <div class="form-check">
            <label class="form-check-label">{{quiz.factors.options.[0]}}</label>
            <input name="1" type="checkbox" class="form-check-input">
          </div>
          <div class="form-check">
            <label class="form-check-label">{{quiz.factors.options.[1]}}</label>
            <input name="2" type="checkbox" class="form-check-input">
          </div>
          <div class="form-check">
            <label class="form-check-label">{{quiz.factors.options.[2]}}</label>
            <input name="3" type="checkbox" class="form-check-input">
          </div>
          <div class="form-check">
            <label class="form-check-label">{{quiz.factors.options.[3]}}</label>
            <input name="4" type="checkbox" class="form-check-input">
          </div>
          <div class="form-check">
            <label class="form-check-label">{{quiz.factors.options.[4]}}</label>
            <input name="5" type="checkbox" class="form-check-input">
          </div>
          <div class="form-check">
            <label class="form-check-label">{{quiz.factors.options.[5]}}</label>
            <input name="5" type="checkbox" class="form-check-input">
          </div>
          <div class="form-check">
            <label class="form-check-label">{{quiz.factors.options.[6]}}</label>
            <input name="5" type="checkbox" class="form-check-input">
          </div>
        </div>
      </div>

      <div class="col-4">
        <div class="card mb-3">
          <div class="card-body">
            <div class="mb-2">
              <button class="btn {{#if action_block.[0].isPrimary}}btn-primary{{/if}}">
                {{action_block.[0].text}}
              </button>
            </div>
            <div class="mb-2">
              <button class="btn {{#if action_block.[1].isDanger}}btn-danger{{/if}}">
                {{action_block.[1].text}}
              </button>
            </div>
            <div>
              <button class="btn {{#if action_block.[2].isInfo}}btn-info{{/if}}">
                {{action_block.[2].text}}
              </button>
            </div>
          </div>
        </div>
        <div class="card">
          <div class="card-body">
            <div>
              <h5 class="mb-3">{{total.title}}</h5>
              <div class="mb-1">{{total.item_list.0.name}}: {{total.item_list.0.price}}</div>
              <div class="mb-1">{{total.item_list.1.name}}: {{total.item_list.1.price}}</div>
              <div class="mb-1">{{total.item_list.2.name}}: {{total.item_list.2.price}}</div>
            </div>
            <hr class="my-3">
            <div class="mb-1">{{total.additional_info.0.text}}: {{total.additional_info.0.value}}</div>
            <div class="mb-1">{{total.additional_info.1.text}}: {{total.additional_info.1.value}}</div>
            <div class="mb-1">{{total.additional_info.2.text}}: {{total.additional_info.2.value}}</div>
            <hr class="my-3">
            <div class="mb-1">{{total.total_price.text}}: {{total.total_price.value}}</div>
            <hr class="my-3">
            <div class="mb-2">
              <button class="btn {{#if total.button.[0].isPrimary}}btn-primary{{/if}}">
                {{total.button.[0].text}}</button>
            </div>
            <div>
              <button class="btn {{#if total.button.[1].isOutline}}btn-outline-primary{{/if}}">
                {{total.button.[1].text}}</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

