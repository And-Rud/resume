{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
    {{#with main}}
    <main>
        {{> title data='Work history' big= true}}
        <section>
            <div>
                <ul>
                    {{#each works}}
                    <li>
                        <div>
                            {{position}}
                        </div>
                        <br>
                        <div>{{duration.from}} - {{#if duration.to}} {{duration.to}}
                            {{else}} (досі працюємо)
                            {{/if}}
                        </div>
                        <br>
                        {{#if company.url}}
                        <div>{{> link href=company.url text=company.name blank=true noLine=true}}</div>
                                {{else}}
                                <div><b>{{company.name}}</b></div>
                                {{/if}}
                                <br>
                                <br>
                                <div><strong> Projects ({{projectAmount}})</strong></div>
                                <br>
                                <ul>
                                    {{#each projects}}
                                    <li>
                                        <div>
                                            {{> link href=url text=name blank=true noLine=true}}
                                        </div>
                                        <br>
                                        <div><p>{{about}}</p></div>
                                        <br>
                                        <div><em>Projects stacks ({{stackAmount}})</em></div>
                                        <br>
                                        <ul>
                                            {{#each stacks}}
                                            <li>
                                                <div>{{name}}</div>
                                            </li>
                                            {{/each}}
                                        </ul>
                                        <br>
                                        <div><em>Projects awards</em></div>
                                        <br>
                                        <ul>
                                            {{#each awards}}
                                            <li>
                                                <div>
                                                    {{name}}
                                                </div>
                                            </li>
                                            {{/each}}
                                        </ul>
                                    </li>
                                    {{/each}}
                                </ul>
                    </li>
                    <br>
                    {{/each}}
                </ul>
            </div>
        </section>

    </main>
    {{/with}}
</div>

